{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "data": {"url": "https://raw.githubusercontent.com/Jamesvh12346/Jamesvh12346.github.io/main/project%20data/Vaccinations.csv"},

  "title": {
    "text": "Covid Cases against Government Approval",
    "subtitle": "06/04/2020 - 20/12/2021 Source: YouGov and ONS ",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },

  "height": 300,
  "width": 310,
  
  "layer": [
    {
      "mark": {"type": "point", "filled": true},
      
      "encoding": {
        "x": {
          "field": "Cases", 
          "type": "quantitative",
          "title": "Covid Cases",
          "scale": {"domain": [0,150000]}
          },
        
        "y": {
          "field": "Approval", 
          "type": "quantitative"
          }
      }
    },

    {
      "mark": {"type": "line", "color": "firebrick"},
      "transform": [
        {"regression": "Cases", "on": "Approval"}
      ],
      "encoding": {
        "x": {"field": "Cases", "type": "quantitative"},
        "y": {
          "field": "Approval", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "regression": "Cases",
          "on": "Approval",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "center",
        "y": -5
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
    

}
