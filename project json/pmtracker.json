{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Who would be the best Prime Minister Tracker",
      "subtitle":"Source: YouGov",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Jamesvh12346/Jamesvh12346.github.io/main/project%20data/pmtracker3.csv"
    },
    "width": 400,
    "height": 300,
    "layer": [
      {
        "encoding": {
          "x": {"field": "Year", "type": "temporal", "title":"2021"},
          "y": {"field": "Value", "type": "quantitative", "title":"Who would be a better PM %"},
          "color": {"field": "Choice", "type": "nominal", "scale": {"scheme": "set2"}, "title":""}
        },
        "layer": [
          {"mark": "line"},
          {
            "params": [{
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "mouseover"
              }
            }],
            "mark": "point",
            "encoding": {
              "opacity": {
                "condition": {
                  "param": "label",
                  "empty": false,
                  "value": 1
                },
                "value": 0
              }
            }
          }
        ]
      },
      {
        "transform": [{"filter": {"param": "label", "empty": false}}],
        "layer": [
          {
            "mark": {"type": "rule", "color": "gray"},
            "encoding": {
              "x": {"type": "temporal", "field": "Year", "aggregate": "min"}
            }
          },
          {
            "encoding": {
              "text": {"type": "quantitative", "field": "Value"},
              "x": {"type": "temporal", "field": "Year"},
              "y": {"type": "quantitative", "field": "Value"}
            },
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "stroke": "white",
                  "strokeWidth": 2,
                  "align": "left",
                  "dx": 5,
                  "dy": -5
                }
              },
              {
                "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
                "encoding": {
                  "color": {"type": "nominal", "field": "Choice"}
                }
              }
            ]
          }
        ]
      }
    ]
  }
