{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


   "title": {
    "text": "Number of yearly marriages",
    "subtitle": "Source: ONS ",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },



    "width":300,
    "height":300,

    "data": {
        "name":"myData",
        "url": "https://raw.githubusercontent.com/Jamesvh12346/Jamesvh12346.github.io/main/marriages2.csv",
        "format": {
          "type":"csv"
        }},
  

    "mark":{
      "type": "line",
      "color":"#9900ff",
      "strokeWidth":2,
      "opacity":1
    },

   "transform": [
    {"calculate": "year(datum.Year)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],

    "params": [    
      {"name":"minYear", "value":1841,
         "bind":{
           "input": "range",
           "min": 1841, 
           "max": 2018, 
           "step": 1,
           "name": "Start year:"}
      },

      {"name":"maxYear", "value":2018,
         "bind":{
           "input": "range",
           "min": 1841, 
           "max": 2018, 
           "step": 1,
           "name": "End year:"}
      }
    ],


    "encoding": {
      
      "x": {
        "field": "Year",
        "type": "temporal",
        "title":null
        },
  
      "y": {
        "field": "Total marriages",                
        "type": "quantitative",
        "title":null,
        "scale":{
          "domain":{
            "data": "myData", 
            "field": "Total marriages"}}
        }
  }
}
