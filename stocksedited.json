
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Jamesvh12346/Jamesvh12346.github.io/main/stocksedited.csv"
  },
  "width": "container",
  "title": {
    "text": "Linear regression: Wizz Air Stock Price on Ryan Air Stock Price",
    "subtitle": "Monthly data, 30/1/16 - 26/11/21",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":11,
    "subtitleColor":"#2417db9c"
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "WIZZL",
          "type": "quantitative",
          "axis": {
            "domain": true
          }
        },
        "y": {
          "field": "RYAAY",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "WIZZL",
          "on": "RYAAY"
        }
      ],
      "encoding": {
        "x": {
          "field": "WIZZL",
          "type": "quantitative"
        },
        "y": {
          "field": "RYAAY",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "WIZZL",
          "on": "RYAAY",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
